<% wrap_layout :horace_default do %>
<div id="content" class="site-content">
    <main id="main" class="site-main outer">
        <article class="post-full inner">
            <header class="post-header">
                <h1 class="post-title"><%= current_page.data.title %></h1>
            </header><!-- .post-header -->
            <% if current_page.data.featured_image %>
                <div class="post-thumbnail"><img src="<%= current_page.data.featured_image %>" alt="<%= current_page.data.featured_image_alt ? current_page.data.featured_image_alt : current_page.data.title %>" /></div>
            <% end %>
            <div class="post-content">
                <%= yield %>
            </div>
        </article>
        <%= partial "newsletter-box" %>
    </main>
</div>
<% end %>
