    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Codefol.io" %></title>
    <link rel="stylesheet" href="https://codefol.io/stylesheets/bootswatch.css">
    <link href="https://fonts.googleapis.com/css?family=Stoke|Roboto&display=swap" rel="stylesheet">

    <script src="/javascripts/jquery-3.3.1.slim.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="https://gumroad.com/js/gumroad.js"></script>

    <script src="/javascripts/site.js"></script>

    <style>
.card {
  width: 95%;
  margin: 3%;
}

.wrapper {
    display: flex;
    width: 100%;
    align-items: stretch;
}

.pull-right {
  float:right;
}

.pull-left {
  float:left;
}

img:not(.no-border) {
    border: 0.25em solid #d0e0ff;
    border-radius: 5px;
    margin:10px;
}

h1,h2,h3,h4,h5,h6 {
    font-family:"Stoke",Stoke,serif;
}

.btn-primary {
    border-style:solid;
    border-width:0px 1px 4px 1px;
    border-color:#202020;
}

.inset img {
  max-width: 90%;
  height: auto;
  margin: 25px;
}

.inset {
  //min-width: 20%;
  max-width: 40%;
  border: 2px solid #ccc;
  border-radius: 5px;
  font-size: 120%;
  padding: 1.0em;
  margin: 1.5em;
  background-image: url("/images/blackboard_tiled.png");
}

.pull-quote {
  background-image: url("/images/blackboard_tiled.png");
  font-style: italic;
  line-height: 1.2;
  font-size: 120%;
  padding-top: 71px;
  border: 2px solid #03e;
  border-radius: 5px;
  padding: 13px;
  margin: 0 13px 13px 0;
}

.pull-quote p:first-letter {
  font-size: 150%;
  font-weight: bold;
}

.pull-quote footer {
  text-align: right;
}

blockquote {
  margin: 0;
}

.cta {
  border: 2px solid white;
  border-radius: 8px;
  background-color: #101830;
  padding: 20px;
  margin: 20px;
  text-align: center;
}

.container em {
  color: #fff0e8;
}

body {
    background-image:url("/images/blackboard_tiled.png");
    font-size: 120%;
    font-family:"Roboto",Roboto,sans-serif;
    color: #f0f0ff;
}

.mc_styling #mc_embed_signup {
  background-image:url("/images/blackboard_tiled.png");
}

    </style>

    <link href="/favicon.png" type="image/png" rel="icon">

