      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-30520713-3');
    </script>
  </head>

  <body>
    <div class="container" style="padding-top: 40px;"><div class="row">
      <div class="col-1"></div><div class="col-10">

      <%= yield %>
      </div>
    </div></div>
  </body>

</html>
