<figure class="<%= figureclasses %>">
    <img src="<%= escape_html(imageurl) %>" class="<%= imageclasses %>" alt="<%= escape_html(alt) %>" <%= width ? "width='#{width}'" : "" %> <%= height ? "height='#{height}'" : "" %> />
    <% if caption %>
        <figcaption class="caption-text"><%= caption %></figcaption> 
    <% end %>
</figure>
