---
title: "Codefol.io, Latest Posts"
pageable: true
per_page: 10
layout: blog_frame
comments: false
next: false
prev: false
---
<% if paginate && num_pages > 1 %>
  <div id="index-top-pager">
    <% if prev_page %>
      <button class="btn btn-primary"><%= link_to '&#8592; Previous page', prev_page %></button>
    <% end %>

    Page <%= page_number %> of <%= num_pages %>

    <% if next_page %>
      <button class="btn btn-primary"><%= link_to 'Next page &#8594;', next_page %></button>
    <% end %>
  </div>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <div class="card border-primary">
    <div class="card-header">
      <span class="card-body text-muted"><%= article.date.strftime('%b %e %Y') %>| <%= link_to "COMMENTS", (article.url + "#disqus_thread") %></span>
      <h3 class="card-title"><%= link_to article.title, article %></h3>
    </div>
    <div class="card-body">
      <%= article.summary(250) %>
    </div>
  </div>
<% end %>

<% if paginate %>
  <% if next_page %>
    <div id="bottom-next"><button class="btn btn-primary"><%= link_to 'Next page', next_page %></button></div>
  <% end %>
<% end %>
