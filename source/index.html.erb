---
pageable: true
per_page: 10
layout: blog_frame
comments: false
next: false
prev: false
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <div class="card border-primary">
    <div class="card-header">
      <span class="card-body text-muted"><%= article.date.strftime('%b %e %Y') %>| <%= link_to "COMMENTS", (article.url + "#disqus_thread") %></span>
      <h3 class="card-title"><%= link_to article.title, article %></h3>
    </div>
    <div class="card-body">
      <%= article.summary(250) %>
    </div>
  </div>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
